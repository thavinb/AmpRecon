/*
---------------------------
	Process Setting
---------------------------
*/

process {
    withName: FASTQC {
        publishDir  = [
          path: {"${params.results_dir}/fastqc/" },
          overwrite: true, 
          mode: "copy"
        ]
        ext.args = '--quiet'
    }

    withName: 'SAMTOOLS_SORT_INDEX' {
        publishDir  = [
          path: {"${params.results_dir}/bams/" },
          overwrite: true, 
          mode: "copy"
		]
        ext.args = ''
    }

    withName: BCFTOOLS_FILTER {
        publishDir  = [
          path: {"${params.results_dir}/vcfs/" },
          overwrite: true, 
          mode: "copy"
        ]
        ext.args = ''
    }

    withName: GRC_ADD_METADATA {
		publishDir = [
			path: {"${params.results_dir}/grc/"}, 
			overwrite: true, 
			mode: "copy"
		] 
	}	
    withName: 'MULTIQC' {
        ext.args   = { params.multiqc_title ? "--title \"$params.multiqc_title\"" : '' }
        publishDir = [
            path: { "${params.outdir}/multiqc" },
            mode: "copy",
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

}
