Bootstrap: docker
From: python:3.8-buster 

%post
    # The repo for buster release is already archived
    sed -i 's|http://deb.debian.org/debian|https://archive.debian.org/debian|g' /etc/apt/sources.list

    # Install required packages
    apt update -qq -y
    apt upgrade -y
    apt install gcc git grep libcurl4-openssl-dev r-base build-essential python3 -y

    # Install required Python packages
    pip install --upgrade pip
    pip install python-csv \
        pytest \
        pandas \
        pyvcf

%runscript
    exec /bin/bash/ "$@"
